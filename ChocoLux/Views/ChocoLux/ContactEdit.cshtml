@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Admin Page";
}

@model ChocoLux.DataModels.ContactUs

<!-- contact section -->
<section class="contact_section layout_padding">
	<div class="container-fluid">
		<div class="row">
			<div class="col-6">
				<div class="form_container">
					<div class="heading_container">
						<h2>
							Contact Edit
						</h2>
					</div>
					<form asp-controller="ChocoLux" asp-action="ContactEdit">
						<div class="card-body">

							<input asp-for="ContactId" hidden />

							<div class="form-group">
								<input type="text" class="form-control" asp-for="ContactName" placeholder="Full Name " />
							</div>

							<div class="form-group">
								<input type="text" class="form-control" asp-for="ContactPhone" placeholder="Phone number" />
							</div>

							<div class="form-group">
								<input type="email" class="form-control" asp-for="ContactEmail" placeholder="Email" />
							</div>

							<div class="form-group">
								<input type="text" class="message-box form-control" asp-for="ContactMessage" placeholder="Message" />
							</div>

							<div class="d-flex ">
								<button>
									Update
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="col-6  px-0">
				<div class="map_container">
					<div class="map">
						<div id="">
							<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d10318.485260552527!2d90.38474817482397!3d23.88481517318526!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c46c783ce335%3A0xe2e8f7dcbc445374!2s41%20Rd%20No.%2011%2C%20Dhaka%201230!5e0!3m2!1sen!2sbd!4v1735592366340!5m2!1sen!2sbd" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- end contact section -->

