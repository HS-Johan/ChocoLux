@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Admin Page";
}

@model ChocoLux.DataModels.Testimonial

<div class="card card-info col-12 justify-content-center m-0">
	<div class="card-header">
		<h3 class="card-title">
			Testimonial Edit
		</h3>
	</div>

	<form asp-controller="Testimonial" asp-action="TestimonialEdit">
		<div class="card-body">

			<input asp-for="TestimonialId" hidden />

			<div class="form-group">
				<lebel>Testimonial Title</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="TestimonialTitle" />
			</div>
			<div class="form-group">
				<lebel>Testimonial Description</lebel>
				<textarea required type="text" rows="5" class="form-control border border-primary" asp-for="TestimonialDescription" ></textarea>

			</div>
			<div class="form-group">
				<lebel>Testimonial Thumbnail</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="TestimonialThumbnail" />
			</div>

			<div class="form-check">
				<input type="checkbox" class="form-check-input" asp-for="TestimonialIsActive" />
				<label class="form-check-label">Is Active</label>
			</div>

		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-success">Update</button>
		</div>
	</form>
</div>