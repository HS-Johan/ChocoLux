@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Product List";
}

@model IEnumerable<ChocoLux.DataModels.Chocolate>

<div class="card">

	<div class="card-header">

		<h3 class="card-title">Title</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
				<i class="fas fa-times"></i>
			</button>
		</div>

	</div>

	<div class="card-body">


		<table class="table table-hover">
			<thead class="table-info">
				<tr>
					<th class="col-1">Serial</th>
					<th class="col-2">Chocolate Name</th>
					<th class="col-2">Chocolate Price</th>
					<th class="col-2">Chocolate Image</th>
					<th class="col-2">Chocolate Ammount</th>
					<th class="col-1">Is Active</th>
					<th class="col-2">Action</th>
				</tr>
			</thead>

			<tbody>

				@{
					int serial = 1;
					foreach (var data in Model)
					{

						<tr>
							<td>@serial</td>
							<td>@data.ChocolateName</td>
							<td>@data.ChocolatePrice</td>
							<td>
								<img src="@data.ChocolateImage" style="width: 50%;" />
							</td>
							<td>@data.ChocolateAmmount</td>
							<td>@data.ChocolateIsActive</td>
							<td>
								<a class="btn btn-success" asp-action="ChocolateEdit" asp-route-id="@data.ChocolateId">Edit</a>
								<a class="btn btn-danger" asp-action="ChocolateDelete" asp-route-id="@data.ChocolateId">Delete</a>
							</td>
						</tr>
						serial++;
					}
				}

			</tbody>

		</table>


	</div>

</div>