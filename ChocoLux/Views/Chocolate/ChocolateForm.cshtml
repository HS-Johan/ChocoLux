@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Create Chocolate";
}

@model ChocoLux.DataModels.Chocolate

<!-- Product section -->

<div class="card card-info col-8 justify-content-center m-0">
	<div class="card-header">
		<h3 class="card-title">
			Add Chocolate
		</h3>
	</div>
	<form asp-controller="Chocolate" asp-action="ChocolateForm">
		<div class="card-body">

			<div class="form-group">
				<lebel>Product Name</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="ChocolateName" />
			</div>
			<div class="form-group">
				<lebel>Product Price</lebel>
				<input required type="number" class="form-control border border-primary" asp-for="ChocolatePrice" />
			</div>
			<div class="form-group">
				<lebel>Product Image</lebel>
				<input required type="text" class="form-control border border-primary" asp-for="ChocolateImage" />
			</div>
			<div class="form-group">
				<lebel>Product Ammount</lebel>
				<input required type="number" class="form-control border border-primary" asp-for="ChocolateAmmount" />
			</div>

			<div class="form-check">
				<input type="checkbox" class="form-check-input" asp-for="ChocolateIsActive" />
				<label class="form-check-label">Is Active</label>
			</div>

		</div>

		<div class="card-footer">
			<button type="submit" class="btn btn-primary">Add</button>
		</div>
	</form>
</div>

<!-- end Product section -->
